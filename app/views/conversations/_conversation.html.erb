<div class ="border rounded mb-4 ">
  <%= tag.div class: "border-start border-5 py-2 px-2 #{conversation.unread_messages_for?(current_user) ? "border-primary" : "border-secondary"}" do %>
    <div class="d-flex justify-content-between align-items-center">
      <div class=" flex-grow-1 px-2">
        <%= link_to conversation_path(conversation), class: "d-block text-decoration-none" do %>
          <span class="position-absolute inset-0" aria-hidden="true"></span>
          <h2 class="h6 text-secondary fw-bolder  text-wrap">
            <% if conversation.deleted_client_or_provider? %>
              <%= t("deleted_account") %>
            <% else %>
              <%= conversation.other_recipient(current_user).name %>
            <% end %>
          </h2>
        <% end %>
      </div>
      <span class=" text-muted">
        <%= time_ago_in_words(conversation.messages.last.updated_at).capitalize %> ago
      </span>
    </div>
    <div class="mt-1 px-2">
      <p class="text-truncate text-sm text-gray-600"><%= conversation.messages.last.content %></p>
    </div>
  <% end %>
</div>
