<div style="background: rgba(251,187,3,0.68);">
<%= render "hero" %>
<%= render "providercard" %>


<div id="modal-1" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Which service are you looking for?</h4><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                 <% @services.each do |service| %>
                        <span class="badge bg-primary me-sm-2 me-1 mb-3" > <%= service %></span>
                    <% end %>
                </div>
            </div>
        </div>
</div>

<div id="modal-2" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Which service are you providing?</h4><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <% @services.each do |service| %>
                        <span class="badge bg-primary me-sm-2 me-1 mb-3" > <%= service %></span>
                    <% end %>
            
                </div>
            </div>
        </div>
</div>

</div>