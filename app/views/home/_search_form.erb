



<div class="container">
  <%= search_form_for @q, url: providers_path, method: :get, class: "mb-3" do |f| %>
    <div class="input-group">
      <%= f.select :service_enum_eq, @services, { prompt: "Service Select" }, { class: "form-select form-control form-control-lg form-control-borderless " } %>
      <%= f.select :location_eq, @locations, { prompt: "All Kenya" }, { class: "form-select form-control form-control-lg form-control-borderless " } %>
      <div class="input-group-append mx-2">
         <%= f.submit "Search", class: "btn  hero-btn text-light btn-lg" %>
      </div>
    </div>
  <% end %>
</div>

