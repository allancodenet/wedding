



<div class="container">
  <%= search_form_for @q, url: providers_path, method: :get, class: "mb-3" do |f| %>
    <div class="input-group">
      <%= f.select :service_enum_eq, @services, { prompt: "Service Select" }, { class: " prompt form-select form-control form-control-lg form-control-borderless " } %>
      <%= f.search_field :location_cont, class: "form-control form-control-lg form-control-borderless ", placeholder: "Location" %>
      <div class="input-group-append mx-2">
         <%= f.submit "Search", class: "btn  btn-secondary btn-lg" %>
      </div>
    </div>
  <% end %>
</div>


