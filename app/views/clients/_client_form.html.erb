<div class ="container">
    <%= bootstrap_form_with(model: client) do |form| %>
      <% if client.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
            <% client.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.text_field :name %>
      </div>
      <div>
        <%= form.number_field :phone_number, placeholder: " 254 700 000 000" %>
      </div>

      <div>
        <%= form.date_field :wedding_date %>
      </div>

      <div>
        <%= form.text_field :location, placeholder: " preferred venue" %>
      </div>

      <div>
        <%= form.number_field :guest_no ,placeholder: " estimated guests number"%>
      </div>

      <div>
        <%= form.number_field :budget , placeholder: " estimated buget in kshs"%>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>
</div>