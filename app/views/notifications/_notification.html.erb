
    <div class=" w-100 max-w-xl mx-auto  mt-3">
      <%= link_to notification_path(notification), class: "text-decoration-none" do %>
        <div class=" border rounded p-2">
          <div class="d-flex justify-content-between align-items-center">
            <span class="me-3 text-sm text-secondary ">
              <%= time_ago_in_words(notification.created_at).capitalize %> ago
            </span>
          </div>
          <div class="mt-3">
            <p class="">
              <%= notification.to_notification.title %>
            </p>
          </div>
        </div>
      <% end %>
    </div>




