
    <div class=" mx-auto rounded-lg overflow-hidden border border-gray-500 mt-3">
      <%= link_to notification_path(notification), class: "text-decoration-none" do %>
        <div class="bg-white py-5 px-4 px-md-5 hover:bg-gray-50 ring ring-inset ring-primary focus-within:bg-blue-100">
          <div class="d-flex justify-content-between align-items-center">
            <span class="me-3 text-sm text-secondary text-gray-500">
              <%= time_ago_in_words(notification.created_at) %> ago
            </span>
          </div>
          <div class="mt-3">
            <p class="text-truncate-2 text-sm text-gray-600">
              <%= notification.to_notification.title %>
            </p>
          </div>
        </div>
      <% end %>
    </div>




